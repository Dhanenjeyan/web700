<div class="row">
  <main class="col-md-12">
    <div class="col-md-12">
      <br>
      <h2>Students</h2>
      <a href="/students/add" class="btn btn-success float-right">Add New Student</a> <!-- Add New Student Button -->
      <hr />

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Student Num</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Address</th>
              <th>Status</th>
              <th>Course</th>
              <th></th> <!-- Empty header for remove links -->
            </tr>
          </thead>
          <tbody>
            {{#each students}}
              <tr>
                <td>{{studentNum}}</td>
                <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                <td><a href="mailto:{{email}}">{{email}}</a></td>
                <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
                <td>{{status}}</td>
                <!--<td>{{course.courseCode}}</td>-->
                <td><a href="/students?course={{this.course}}">{{this.course}}</a></td>
                <td><a href="/student/delete/{{studentNum}}" class="btn btn-danger">remove</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-12 text-center">
      {{#unless students}}
        <strong>{{message}}</strong>
      {{/unless}}
    </div>

  </main>
</div>
