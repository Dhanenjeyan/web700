<div class="row">
  <main class="col-md-12">
    <div class="col-md-12">
      <br>
      <h2>Courses</h2>
      <a href="/courses/add" class="btn btn-success float-right">Add New Course</a> <!-- Add New Course Button -->
      <hr />

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Course Code</th>
              <th>Course Description</th>
              <th></th> <!-- Empty header for remove links -->
            </tr>
          </thead>
          <tbody>
            {{#each courses}}
              <tr>
                <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">remove</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-12 text-center">
      {{#unless courses}}
        <strong>{{message}}</strong>
      {{/unless}}
    </div>

  </main>
</div>
